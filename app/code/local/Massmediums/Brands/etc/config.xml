<config>
    <modules>
        <Massmediums_Brands>
            <version>1.0.0</version>
        </Massmediums_Brands>
    </modules>
    <frontend>
        <layout>
            <updates>
                <brands>
                    <file>massmediums_brands.xml</file>
                </brands>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <brands>
                <class>Massmediums_Brands_Model</class>
            </brands>
        </models>
        <blocks>
            <brands>
                <class>Massmediums_Brands_Block</class>
            </brands>
        </blocks>
        <helpers>
            <brands>
                <class>Massmediums_Brands_Helper</class>
            </brands>
        </helpers>
    </global>
	<default>
		<brands>
			<general>
				<attr_id>manufacturer</attr_id>
				<image_extension>png</image_extension>
				<link_search_enabled>1</link_search_enabled>
				<page_base_path></page_base_path>
				<append_category_suffix>0</append_category_suffix>
			</general>
			<product_view>
				<enable>1</enable>
				<show_image>1</show_image>
			</product_view>
			<slider>
				<enable>1</enable>
				<all_brands>1</all_brands>
				<easing>easeInOutCubic</easing>
				<timeout>6000</timeout>
				<speed>300</speed>
				<pause>1</pause>
				<loop>1</loop>
			</slider>
		</brands>
	</default>
</config>
